{
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://food-nest-rest.vercel.app/api/"
      }
    ],
    "builds": [
      {
        "src": "site/package.json",     
        "use": "@vercel/static-build",  
        "config": { "distDir": "build" }
      },
      {
        "src": "rest/index.js",          
        "use": "@vercel/node"            
      }
    ]
  }
  